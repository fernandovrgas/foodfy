{% extends "layout.njk" %}

{% block content %}
	<section class="detalheReceita">
		<img src="{{ receita.image }}"/>
		
		<h1 class="detalheReceita-title">{{ receita.title }}</h1>
		<p class="detalheReceita-legend">por {{ receita.author }}</p>

		<div class="content" id="ingredients">
			<h2>Ingredientes <a id="ingredientsButton" class="linkItemReceita" visible="true">ESCONDER</a></h2>
			<ul id="ingredientsButtonContent">
				{% for ingredient in receita.ingredients %}
					<li>{{ ingredient }}</li>
				{% endfor %}
			</ul>
		</div>

		<div class="content" id="preparation">
			<h2>Modo de preparo <a id="preparationButton" class="linkItemReceita" visible="true" href="#">ESCONDER</a></h2>
			<p id="preparationButtonContent"> {{ receita.preparation }} </p>
		</div>

		<div class="content" id="information">
			<h2>Informações adicionais <a id="informationButton" class="linkItemReceita" visible="true" href="#">ESCONDER</a></h2>
			<p id="informationButtonContent"> {{ receita.information }} </p>
		</div>
	</section>
{% endblock content %}