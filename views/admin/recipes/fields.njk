<div class="item">
	<span>Imagem da receita</span>
	<input type="url" name="image" value="{{ recipe.image }}" />
</div>

<div class="item">
	<span>Ingredientes</span>
	<input type="text" name="ingredients" value="{{ recipe.ingredients }}" />
</div>

<div class="item">
	<span>Modo de preparo</span>
	<input type="text" name="preparation" value="{{ recipe.preparation }}" />
</div>

<div class="item">
	<span>Informações adicionais</span>
	<textarea type="text" name="information">{{ recipe.information }}</textarea>
</div>