<div class="item">
	<span>Imagem da receita</span>
	<input type="url" name="image" value="{{ recipe.image }}" placeholder="https//" />
</div>

<div class="item">
	<span>Ingredientes</span>
	<input type="text" name="ingredients" placeholder="Ingredientes" value="{{ recipe.ingredients }}" />
</div>

<div class="item">
	<span>Modo de preparo</span>
	<input type="text" name="preparation" value="{{ recipe.preparation }}" />
</div>

<div class="item">
	<span>Informações adicionais</span>
	<input type="text" name="information" value="{{ recipe.information }}" />
</div>

<button type="submit">Salvar</button>